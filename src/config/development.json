{
  "host": "localhost",
  "token": {
    "expires_in": 3600
  },
  "db": {
    "mongo": {
      "host": "localhost",
      "name": "cbo"
    }
  },
  "session": {
    "secret" : "cbo-2015",
    "saveUninitialized": true,
    "resave": true
  },
  /**
   * Cross Domain Setting
   */
  "cross": {
    "enable": true,
    "allow_origin" : null, // default: "*",
    "allow_headers" : null // default: Origin, X-Requested-With, Content-Type, Accept
  },
  "salt": "<salt>",
  /**
   * Logger
   */
  "rollbar": {
    "access_token" : "<rollbar token>"
  },
  "cache": {
        "enable": true,
        "adapter": "memory",
        "backup": "redis",
        "redis": {
            "host": "localhost",
            "port": "6379",
            "db": 0,
            "ttl": 86400
        },
        "memory": {
            "max": 100,
            "ttl": 60
        }
    }
}