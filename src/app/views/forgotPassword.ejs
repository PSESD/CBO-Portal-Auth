<% layout('layout') -%>
<div class="col-md-offset-4 col-md-4" id="login-container">

            <form class="form-signin ng-dirty ng-valid-parse ng-valid ng-valid-required" id="loginForm" name="loginForm" role="form" action="/api/user/forgotpassword" method="post">
                <div class="card">
                    <div class="title">
                        <h1>Change Password</h1>
                        <hr>
                    </div>
                    <div class="content">
                        <p>
                            <input type="password" class="form-control ng-dirty ng-valid-parse ng-valid ng-valid-required ng-touched" name="password" placeholder="<%= __('general.new_password') %>" required="true" autofocus="" style="background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;" autocomplete="off">
                        </p>
                        <p>
                            <input type="password" class="form-control ng-untouched ng-dirty ng-valid-parse ng-valid ng-valid-required" name="confirm_password" placeholder="<%= __('general.confirm_password') %>" required="" style="background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;" autocomplete="off">
                        </p>
                    </div>
                    <input type="hidden" name="email" value="<%= session.email %>" />
                    <input type="hidden" name="redirectTo" value="<%= session.redirectTo %>" />
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" value="Submit" class="button"><%= __('general.change') %></button>
                </div>
            </form>

        </div>
